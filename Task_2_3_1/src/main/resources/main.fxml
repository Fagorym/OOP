<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" prefHeight="300" prefWidth="400"
            xmlns="http://javafx.com/javafx/11.0.2" fx:controller="ru.nsu.fit.oop.veber.view.MainMenuView">
    <VBox layoutX="142.0" layoutY="90.0" alignment="CENTER" spacing="10.0" maxWidth="Infinity"
          prefWidth="400" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" stylesheets="gameStyle.css">
        <Label text="Меню"/>
        <Button fx:id="playButton" mnemonicParsing="false" onAction="#handlePlayButton" text="Начать игру"/>
        <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#handleSettingsButton" text="Настройки"/>
        <Button fx:id="exitButton" mnemonicParsing="false" onAction="#handleExitButton" text="Выход"/>
    </VBox>
</AnchorPane>